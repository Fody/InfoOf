<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net452;netstandard1.4</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>key.snk</AssemblyOriginatorKeyFile>
    <Authors>Simon Cropp</Authors>
    <PackageTags>typeof, methodof, propertyof, ILWeaving, Fody, Cecil</PackageTags>
    <Description>Exposes 'methodof' and 'propertyof' to any .net language.</Description>
    <PackageOutputPath>$(SolutionDir)nugets</PackageOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Fody" Version="5.0.0-beta.7" PrivateAssets="None" />
    <PackageReference Include="FodyPackaging" Version="5.0.0-beta.7" PrivateAssets="All" />
  </ItemGroup>
</Project>